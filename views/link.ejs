    <main>
      <div class="container">
        <!-- Links Section -->
        <section id="links" class="section active">
          <h2>Social Media Links</h2>
          <form id="links-form" action="/info" method="post">
            <div id="links-container">
              <!-- Default input fields -->
              <div class="link-input">
                <input type="text" name="link1" placeholder="LinkedIn">
              </div>
              <div class="link-input">
                <input type="text" name="link2" placeholder="Twitter">
              </div>
              <div class="link-input">
                <input type="text" name="link3" placeholder="GitHub">
              </div>
              <div class="link-input">
                <input type="text" name="link4" placeholder="YouTube">
              </div>
            </div>

          </section>

          <!-- Skills Section -->
          <section id="skills" class="section">
            <h2>Add Skills</h2>

            <div id="skills-container">
              <!-- Default input fields -->
              <div class="skill-input">
                <input type="text" name="skill1" placeholder="Enter skill">
              </div>
              <div class="skill-input">
                <input type="text" name="skill2" placeholder="Enter skill">
              </div>
              <div class="skill-input">
                <input type="text" name="skill3" placeholder="Enter skill">
              </div>
              <div class="skill-input">
                <input type="text" name="skill4" placeholder="Enter skill">
              </div>
              <div class="skill-input">
                <input type="text" name="skill5" placeholder="Enter skill">
              </div>
            </div>
            <button type="submit" form="links-form"
              class="submit-btn">Submit</button>
          </form>
        </section>

        <!-- Submit Button -->

      </div>
    </main>

