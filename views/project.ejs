<main>
  <div class="container">
  
    <form id="pdf-upload-form" method="post" action="/project">

      <label for="summary">Summary:</label><br>
      <input type="text" id="summary" name="summary"><br><br>
      
      <label for="link">Project Link:</label><br>
      <input type="text" id="link" name="proLink"><br><br>
      
      <label for="stacks">Stacks:</label><br>
      <div id="stacks-container">
        <input type="text" name="stack1" class="stack-input"><br><br>
      </div>
      <div id="stacks-container">
        <input type="text" name="stack2" class="stack-input"><br><br>
